{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "tests-typescript/**/*"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "playwright-report",
    "test-results"
  ]
}
